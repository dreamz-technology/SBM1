<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"

                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="125dp">

                        <ImageView
                            android:id="@+id/Bimage_search_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/noimg" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_round_square" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_view_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:text="@string/view_profile"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1.4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Btxt_search_layout_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/name"
                        android:maxLines="1"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/ll_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Btxt_search_layout_name"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Btxt_search_layout_age"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1.4"
                            android:text="@string/age"
                            android:maxLines="1"
                            android:textColor="#000"
                            android:textSize="15sp" />

                        <!--<ImageView
                            android:id="@+id/img_delete"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:src="@drawable/ic_delete" />-->
                    </LinearLayout>

                    <TextView
                        android:id="@+id/Btxt_search_layout_education"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_age"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/education"
                        android:maxLines="1"
                        android:textColor="#000"
                        android:textSize="15sp" />



                    <LinearLayout
                        android:id="@+id/btn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <LinearLayout
                            android:id="@+id/layout_unmark"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/iv_heart"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginHorizontal="3dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/heart" />

                            <TextView
                                android:id="@+id/tv_bookmark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="@string/unmark"
                                android:textColor="#000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!--<TextView
                            android:id="@+id/layout_unmark"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/outline_heart"
                            android:drawablePadding="6dp"
                            android:paddingStart="5dp"
                            android:gravity="center_vertical"
                            android:text="@string/unmark"
                            android:textColor="#000"
                            android:textSize="12sp" />-->


                        <LinearLayout
                            android:id="@+id/layout_invitations"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginHorizontal="4dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/send" />

                            <TextView
                                android:id="@+id/tv_is_invite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/invitations"
                                android:textColor="#000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/layout_kundli"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/btn"
                            android:layout_gravity="center"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:text="गुणमिलन"
                            android:textColor="@color/maroon"
                            android:textSize="12sp" />
                        <!--<TextView
                            android:id="@+id/layout_kundli"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="@string/view_kundli"
                            android:textColor="@color/maroon"
                            android:textSize="12sp" />-->

                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/sbm_star" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>